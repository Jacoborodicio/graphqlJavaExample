schema {
    query: Query,
    mutation: Mutation,
    subscription: Subscription
}

type Actor {
    actorId:ID!,
    firstName:String,
    lastName:String,
    dob:String,
    address:String,
    filmId:Int,
    film:Film
}

type Film {
    filmId:ID!,
    name:String,
    launchYear:String,
}

input AddressInput {
    actorId: Int,
    address: String
}
type Query {
    getAllActors:[Actor],
    getActorById(id: Int) : Actor,
}

type Mutation {
    updateAddress(id: Int, address: String):Actor,
    updateAddressByObjectType(input:AddressInput):Actor
}

type Subscription {
    onActorUpdate(actorId:Int):Actor
}
